{% extends 'base.html.twig' %}

{% block body %}

    <a href="{{ path('todo_list') }}" title="Back to the list" class="btn btn-default ">Back to the list</a>

    <hr>

    <h2 class="page-header">{{ todo.name }}</h2>

    <ul class="list-group">
        <li class="list-group-item"><strong>Category:</strong> {{ todo.category }}</li>
        <li class="list-group-item"><strong>Priority:</strong> {{ todo.category }}</li>
        <li class="list-group-item"><strong>Due date:</strong> {{ todo.dueDate|date('F j, Y, g:i a') }}</li>
    </ul>

    <div>
        {{ todo.description }}
    </div>

{% endblock %}
